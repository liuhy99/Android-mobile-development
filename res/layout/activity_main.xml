<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bj3" >

        <TextView
            android:id="@+id/agreetext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/checkbox"
            android:layout_alignBottom="@+id/checkbox"
            android:layout_toLeftOf="@+id/serviceText"
            android:text="同意"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/serviceText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/agreetext"
            android:layout_alignBottom="@+id/agreetext"
            android:layout_centerHorizontal="true"
            android:text="《服务协议》"
            android:textColor="#5552ed"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignTop="@+id/st_password"
            android:src="@drawable/suo3" />

        <EditText
            android:id="@+id/st_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:ems="10"
            android:hint="@string/user"
            android:textColorHint="#ffffff" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/imageView3"
            android:layout_alignLeft="@+id/checkbox"
            android:src="@drawable/user" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/loginbutton"
            android:layout_alignLeft="@+id/loginbutton"
            android:layout_marginBottom="14dp"
            android:background="@drawable/ck_theme"
            android:button="@null"
            android:checked="false"
            android:gravity="center" />

        <EditText
            android:id="@+id/st_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/agreetext"
            android:layout_alignLeft="@+id/agreetext"
            android:layout_marginBottom="14dp"
            android:ems="10"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/registbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:background="#FF7f00"
            android:text="登录" />

        <Button
            android:id="@+id/registbutton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginbutton"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:background="#FF7f00"
            android:text="注册" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/st_id"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/user1" />

    </RelativeLayout>

</RelativeLayout>
