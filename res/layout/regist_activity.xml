<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/register_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="欢迎进入注册页面"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/regist_bt"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="101dp"
            android:background="#FF7f00"
            android:text="注册" />

        <EditText
            android:id="@+id/pwd2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/regist_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="确认密码"
            android:textColorHint="#ffffff" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/pwd1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pwd2"
            android:layout_alignLeft="@+id/pwd2"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="密码"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/userid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pwd1"
            android:layout_alignLeft="@+id/pwd1"
            android:ems="10"
            android:hint="用户名"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userid"
            android:layout_toRightOf="@+id/imageView1"
            android:text="选择头像" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/userid"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user1" />

    </RelativeLayout>
</RelativeLayout>